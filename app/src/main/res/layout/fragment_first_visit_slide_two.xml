<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/firstVisitSlideBackground">

    <ImageView
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:tint="@android:color/white"
        app:srcCompat="@drawable/ic_weight_scale"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="32dp"
        android:layout_marginTop="32dp"
        android:padding="16dp"
        android:gravity="center">

        <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:background="@android:color/white" />

        <danialnoaein_widgets.TextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:gravity="center"
            android:background="@color/firstVisitSlideBackground"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:text="مشخصات جسمی"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <danialnoaein_widgets.EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/bg_edittext_first_visit"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/white"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="3"
            android:hint="قد (به سانتیمتر)"/>

        <danialnoaein_widgets.EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:background="@drawable/bg_edittext_first_visit"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/white"
            android:inputType="number"
            android:maxLines="1"
            android:maxLength="3"
            android:hint="وزن (به کیلوگرم)"/>


    </LinearLayout>


</LinearLayout>