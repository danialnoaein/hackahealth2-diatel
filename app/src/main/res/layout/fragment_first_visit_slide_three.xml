<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="#B3E9B5">

        <ImageView
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:tint="@color/colorSuccessDark"
            app:srcCompat="@drawable/ic_first_aid_kit"/>

        <danialnoaein_widgets.TextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:layout_marginBottom="16dp"
            android:textColor="@color/colorSuccessDark"
            android:text="سوابق پزشکی"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginBottom="4dp"
                android:background="@drawable/bg_edittext_success"
                android:orientation="horizontal">
                <RadioGroup
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="right"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <danialnoaein_widgets.RadioButton
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="بله"/>

                    <danialnoaein_widgets.RadioButton
                        android:layout_width="80dp"
                        android:layout_height="match_parent"
                        android:text="خیر"/>

                </RadioGroup>


                <danialnoaein_widgets.TextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:padding="8dp"
                    android:gravity="right|center_vertical"
                    android:hint="آیا سابقه دیابت دارید : "/>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:gravity="right"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_edittext_success"
                android:orientation="vertical">

                <danialnoaein_widgets.TextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingRight="8dp"
                    android:gravity="right|center_vertical"
                    android:hint="نوع دیابت : "/>

                <RadioGroup
                    android:layout_width="match_parent"
                    android:gravity="right"
                    android:paddingRight="8dp"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">







                    <danialnoaein_widgets.RadioButton
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="سایر"/>

                    <danialnoaein_widgets.RadioButton
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="بارداری"/>

                    <danialnoaein_widgets.RadioButton
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="نوع دوم"/>

                    <danialnoaein_widgets.RadioButton
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:text="نوع اول"/>

                </RadioGroup>






            </LinearLayout>

            <danialnoaein_widgets.EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:maxLines="1"
                android:maxLength="30"
                android:background="@drawable/bg_edittext_success"
                android:layout_marginBottom="8dp"
                android:hint="بیماری خانوادگی"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="vertical"
                android:layout_gravity="right"
                android:background="@drawable/bg_edittext_success">

                <danialnoaein_widgets.CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                    android:text="سیگار می کشم"/>

                <danialnoaein_widgets.CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                    android:text="مواد مخدر مصرف می کنم"/>

                <danialnoaein_widgets.CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                    android:text="مشروبات الکلی مصرف می کنم"/>

                <danialnoaein_widgets.CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                    android:text="باردار هستم"/>

                <danialnoaein_widgets.CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@null"
                    android:drawableRight="?android:attr/listChoiceIndicatorMultiple"
                    android:text="به صورت منظم ورزش می کنم"/>


            </LinearLayout>

        </LinearLayout>


    </LinearLayout>