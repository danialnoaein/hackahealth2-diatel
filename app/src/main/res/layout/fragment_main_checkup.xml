<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="8dp">

    <!--Checkup Button-->
    <LinearLayout
        android:id="@+id/ll_im_checkup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginBottom="8dp"
        android:background="@drawable/bg_immediate_checkup_btn"
        android:gravity="right"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/ic_dermatology" />

            <danialnoaein_widgets.TextViewBold
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="شروع چکاپ"
                android:textColor="@android:color/white"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="right"
            android:orientation="vertical">

            <danialnoaein_widgets.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="قبل از هر وعده غذایی، ۲ ساعت بعد از هر وعده غذایی، قبل خواب"
                android:textColor="@android:color/white" />

            <danialnoaein_widgets.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="12"
                android:textColor="@android:color/white" />

            <danialnoaein_widgets.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="12"
                android:textColor="@android:color/white" />

            <danialnoaein_widgets.TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:text="12"
                android:textColor="@android:color/white" />
            

        </LinearLayout>

    </LinearLayout>

    <!--Glucometer Guide Button-->
    <LinearLayout
        android:id="@+id/ll_glu_guide"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_glucometer_guide_btn"
        android:gravity="right|center_vertical"
        android:orientation="horizontal"
        android:padding="8dp">

        <danialnoaein_widgets.TextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="right|center_vertical"
            android:text="  آموزش کار با گلوکومتر"
            android:textColor="@android:color/white" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:tint="@android:color/white"
            app:srcCompat="@drawable/ic_glucometer" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </RelativeLayout>

</LinearLayout>