<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/firstVisitSlideBackground"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:tint="@android:color/white"
                app:srcCompat="@drawable/ic_phone_call" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="16dp">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_centerInParent="true"
                    android:background="@android:color/white" />

                <danialnoaein_widgets.TextViewBold
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:background="@color/firstVisitSlideBackground"
                    android:gravity="center"
                    android:paddingLeft="16dp"
                    android:paddingRight="16dp"
                    android:text="شماره تلفن"
                    android:textColor="@android:color/white"
                    android:textSize="24sp" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:orientation="vertical">

                <danialnoaein_widgets.EditText
                    android:id="@+id/et_phone_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_edittext_first_visit"
                    android:hint="شماره تلفن(09123456789)"
                    android:inputType="number"
                    android:maxLength="11"
                    android:maxLines="1"
                    android:padding="8dp"
                    android:textColor="@android:color/white" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageButton
                        android:layout_width="42dp"
                        android:layout_height="42dp"
                        android:id="@+id/ib_nurse_phone_number_info"
                        android:layout_marginRight="8dp"
                        app:srcCompat="@drawable/ic_information"
                        android:background="@android:color/transparent"/>

                    <danialnoaein_widgets.EditText
                        android:id="@+id/et_nurse_phone_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/bg_edittext_first_visit"
                        android:hint="شماره تلفن پرستار یا همیار(09123456789)"
                        android:inputType="number"
                        android:maxLength="11"
                        android:maxLines="1"
                        android:padding="8dp"
                        android:textColor="@android:color/white" />
                </LinearLayout>


                <danialnoaein_widgets.ButtonBold
                    android:id="@+id/btn_register"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:text="ورود"
                    android:textColor="@color/firstVisitSlideBackground" />

                <com.github.ybq.android.spinkit.SpinKitView
                    android:id="@+id/pb_loading"
                    style="@style/SpinKitView.Large.Circle"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    app:SpinKit_Color="@color/colorAccentSecond" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>