<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/firstVisitSlideBackground">

    <ImageView
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:tint="@android:color/white"
        app:srcCompat="@drawable/ic_avatar"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:gravity="center">

        <View android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_centerInParent="true"
            android:background="@android:color/white" />

        <danialnoaein_widgets.TextViewBold
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:gravity="center"
            android:background="@color/firstVisitSlideBackground"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_centerInParent="true"
            android:textColor="@android:color/white"
            android:text="مشخصات عمومی"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical">

        <danialnoaein_widgets.EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:maxLines="1"
            android:inputType="text"
            android:maxLength="30"
            android:id="@+id/et_name"
            android:textSize="14sp"
            android:background="@drawable/bg_edittext_first_visit"
            android:layout_marginBottom="8dp"
            android:textColor="@android:color/white"
            android:hint="نام و نام خانوادگی"/>

        <danialnoaein_widgets.EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:id="@+id/et_age"
            android:background="@drawable/bg_edittext_first_visit"
            android:textColor="@android:color/white"
            android:layout_marginBottom="8dp"
            android:inputType="number"
            android:maxLines="1"
            android:textSize="14sp"
            android:maxLength="3"
            android:hint="سن"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_gravity="right"
            android:gravity="right"
            android:background="@drawable/bg_edittext_first_visit"
            android:orientation="horizontal">
            <RadioGroup
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="right"
                android:id="@+id/rg_gender"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <danialnoaein_widgets.RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/white"
                    android:button="@null"
                    android:id="@+id/rb_man"
                    android:drawableRight="?android:attr/listChoiceIndicatorSingle"
                    android:text="مرد"/>

                <danialnoaein_widgets.RadioButton
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:textColor="@android:color/white"
                    android:button="@null"
                    android:id="@+id/rb_woman"
                    android:drawableRight="?android:attr/listChoiceIndicatorSingle"
                    android:text="زن"/>

            </RadioGroup>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>